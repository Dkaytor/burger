<h1>Eat Da Burger!</h1>

<img src="../assets/img/burger.jpg" alt="burger" class="center">

<div class="row">
	<div class="col-md-4">
		<h3>Devour the burger of your choice!</h3>

		<ul>
			{{#each burger}}
			{{#unless devour}}
			<span><h4>{{this.burger_name}}
				<button class="change-devour" data-id="{{id}}" data-newdevour="{{devour}}">
				DEVOUR!
				</button>
				</h4></span>
				{{/unless}}
			{{/each}}
		</ul>
		</div>
		<div class="col-md-2"></div>

		<div class="col-md-6">
			<h3>Burgers Devoured!</h3>
			<ul>
				{{#each burger}}
				{{#if devour}}
				<h4>{{this.burger_name}}</h4>
				{{/if}}
				{{/each}}
			</ul>

		</div>
</div>

<form action="/" method="POST">
	<textarea type="text" name="burger"></textarea>

	<button type="submit" align="right">Submit</button>
</form>